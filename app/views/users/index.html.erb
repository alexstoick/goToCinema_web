<h2>Listing users</h2>

<table style="width: 60%">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th></td>
		</tr>
	</thead>

<%- @users.each do |user| -%>
	<%- if user.id != session[:user_id] -%>
		<tr>
			<td style="text-align: center"><%= user.username %></td>
			<td style="text-align: center"><%= user.email %></td>
			<td style="text-align: center"><%= link_to "View profile", user_path(user) %></td>
		</tr>
	<%- end -%>
<%- end -%>
</table>
<br>
<%= link_to "New user", new_user_path %>