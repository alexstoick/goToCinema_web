
<h2> <%= @user.username.capitalize %> </h2>

<div class="row">
	<div class="span3">
		<img src="<%= @user.image%>"/>
	</div>
	<div class="span7">
		<p> <b> Date of Birth </b> <%= @user.DOB %></p>
		<p ><b> Email: </b> <%= @user.email %></p>
		<p> <b> Name: </b> <%= @user.fullname %> </p>

	</div>
</div>
<br>


<%- @user.wall_posts.each do |post| -%>
	<div class="row-fluid" style="margin-bottom: 5px;">
		<img src="<%= post.sender.image %>" class="span2">
		<h3> <%= link_to post.sender.fullname , user_path( post.sender )%> </h3>

		<p><b> <%= post.title %> </b></p>
		<!-- <p> <%= post.content %> </p> -->
	</div>

<%- end -%>