<%= form_for(@user) do |f| %>
	<div class="field">
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.text_field :password %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<%- end -%>